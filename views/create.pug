doctype html
html

    head
        title Create Note
        link(rel='stylesheet', href='https://unpkg.com/mvp.css')

    body
        h1 Create note:
        form(action=`${global.baseUrl}/create/` method="POST" class="pure-form")
            label title
            input(
            type="text"
            name="title"
            )
            br
            label body
            textarea(
            name="body"
            )
            br
            input(type="submit")
            br

        a(href=`${global.baseUrl}/`) Home